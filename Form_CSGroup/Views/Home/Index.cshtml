@model Contacts
@{
    ViewData["Title"] = "CSgroup";
}

<h1> <span style="color:red;">CS</span> Group</h1>

<form method="post" asp-controller="Home" asp-action="Check">
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>

    <label asp-for="Organization"></label>
    <input asp-for="Organization" />
    <span asp-validation-for="Organization"></span>

    <label asp-for="Phone"></label>
    <input asp-for="Phone" />
    <span asp-validation-for="Phone"></span>
   
    <label asp-for="Email"></label>
    <input asp-for="Email" />
    <span asp-validation-for="Email"></span>

    <label asp-for="Position"></label>
    <input asp-for="Position" />
    <span asp-validation-for="Position"></span>

    <label asp-for="Message"></label>
    <textarea id="Message" asp-for="Message"></textarea>
    <span asp-validation-for="Message" class="validation-message"></span>


    <input type="submit" value="Отправить"
</form>